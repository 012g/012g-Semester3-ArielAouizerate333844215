.wrapper
  #formContent
    // Tabs Titles
    h2.active  My Events 
    h2.inactive.underlineHover
      a(href='/events/create') Create Event
    h2.inactive.underlineHover
      a(href='/events/join-event') Join Event
    h2.inactive.underlineHover-Log-Out
      a(href='/users/logout') Log Out
    // Event Scroll
    .widget-wrap
      // (A) VIEW SWITCHER
      #lgSwitches
        button#sList &minusb;
        button#sGrid &plusb;
      p.error-message=error
      // (B) ITEMS LIST/GRID
      #lgDemo
        if !events.length
          p No Events

        each event in events
          .item
            div.item-header
              p=event.teamName
              input.ArrowMyEvent(type='button' value='âž¤')
              form(action="/events/delete" method="POST")
                input(name="eventId" hidden value=event._id)
                input.ArrowMyEvent.delete(type='submit' value='ðŸ—‘')
            div.item-dropdown
              p Event Code: #{event._id}
              p Team Name: #{event.teamName}
              p Slots : #{event.slots}
              p Event Category: #{event.category}
              p Event Address: #{event.address}
              p Event Date: #{new Date(event.date).getFullYear()} - #{new Date(event.date).getMonth() + 1} - #{new Date(event.date).getDate()}
              input.long(value=event.location.coordinates[0] hidden)
              input.lat(value=event.location.coordinates[1] hidden)
              div.map
